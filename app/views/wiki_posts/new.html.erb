<h1>New wiki post</h1>

<%= form_with(model: @wiki_post, local: true, html: { multipart: true }) do |form| %>

  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <%= form.label :description %>
    <%= form.text_field :description %>
    <%= form.label :author %>
    <%= form.text_field :author %>
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div>
    <%= form.submit "Create" %>
  </div>

<% end %>

<br>

<div>
  <%= link_to "Back to wiki posts", wiki_posts_path %>
</div>
